@using Alaca.Web.Models
@using Admin.DataLayer
@model LayoutModel<DownloadModel>

@{
    ViewBag.Title = "Download";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section slider
{
    <div id="about_us" class="half_banner" data-bg="/images/node_banner.jpg">
    </div>
}
<section class="about_sec half_top bg_gray">
    <div class="container">
        <div class="white_bg">

            <div class="row">
                <div class="col-md-12 text-center head_section wow fadeInUp">
                    <h2 class="section-title tt">Alaca Yazılım <span style="color: #e93726;">İndirilebilir Dosyalar</span></h2>
                </div>
            </div>
            <div class="feature_boxes">
                <div class="icons-box">
                    <div class="row">

                        @foreach (DownloadLink downloadLink in Model.PageModel.Downloads)
                        {
                            <div class="col-lg-3 col-md-4 col-sm-12">
                                <div class="icons-wrap wow zoomIn" data-wow-delay="0.5s">
                                    <div class="icons-item">
                                        <a href="@downloadLink.DownloadUrl">
                                            <div class="item-box sa-img no box-shadow transition">
                                                <h5 class="icons-box-title">@downloadLink.DownloadAdi</h5>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>