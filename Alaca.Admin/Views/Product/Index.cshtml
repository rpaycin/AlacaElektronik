@using Admin.Entity;
@model ProductControllerModel

@{
    ViewBag.Title = "Ürün ve Grup Bilgileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Ürün Grup tasarım*@
<button type="button" class="btn btn-block btn-info btn-sm" data-toggle="modal" data-target="#modalSaveGroup" style="width:100px" onclick="addClickGroup()">Ürün Grup Ekle</button> <br />

<table id="tblDataListGroup" class="table table-bordered table-hover dataTable dtr-inline" role="grid" aria-describedby="dataList_info">
    <thead>
        <tr role="row">
            <th>Grup Adı</th>
            <th>Ana Grup Adı</th>
            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (ProductGroup productGroup in Model.ProductGroups)
        {
            <tr role="row" class="odd">
                <td>@productGroup.UrunGrupAdi</td>
                <td>@productGroup.AnaGrupAdi</td>
                <td>
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modalSaveGroup" onclick="updateClickGroup(@productGroup.UrunGrupId)" title="Güncelle">
