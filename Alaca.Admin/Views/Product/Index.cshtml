<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<script>
    $(function () {
        $("#tblDataList").dataTable({
            "responsive": true,
            "autoWidth": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json",
            }
        });

        $("#tblDataListGroup").dataTable({
            "responsive": true,
            "autoWidth": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json",
            }
        });
    });

    var selectedRowId = 0;
    var selectedGroupRowId = 0;

    function addClick() {
        $("#spanBaslik").text("Ürün Ekleme");
    }

    function addClickGroup() {
        $("#spanBaslikGrup").text("Ürün Grup Ekleme");
    }

    function updateClick(id) {
        $("#spanBaslik").text("Ürün Güncelleme");

        selectedRowId = id;

        var model = @Html.Raw(Json.Encode(Model.Products));

        if (id > 0 && model != null && model.length > 0) {
            for (var i = 0; i < model.length; i++) {
                if (model[i].UrunId == selectedRowId) {
                    $("#ddlUrunGrupId").val(model[i].FKUrunGrupId);
                    $("#txtUrunAdi").val(model[i].UrunAdi);
                    $("#txtListeFiyat").val(model[i].ListeFiyat);
                    $("#txtListeIskontoOran").val(model[i].ListeIskontoOran);
                    $("#txtAciklama").val(model[i].Aciklama);
                }
            }
            var item = model.find(findItem);

            if (item != null) {
            }
        }
    }

     function updateClickGroup(id) {
         $("#spanBaslikGrup").text("Ürün Grup Güncelleme");

         selectedGroupRowId = id;

        var model = @Html.Raw(Json.Encode(Model.ProductGroups));

        if (id > 0 && model != null && model.length > 0) {
            for (var i = 0; i < model.length; i++) {
                if (model[i].UrunGrupId == selectedGroupRowId) {
                    $("#txtUrunGrupAdi").val(model[i].UrunGrupAdi);
                    $("#ddlAnaUrunGrupId").val(model[i].AnaGrupId);
                }
            }
        }
    }

    function findItem(item) {
        return item.UrunId = selectedRowId;
     }

    function deleteClick(id) {
        selectedRowId = id;
    }

    function deleteClickGroup(id) {
        selectedGroupRowId = id;
    }

    // kaydetme
    function modalKaydet() {
        var urun = {};

        urun.UrunId = selectedRowId;
        urun.FKUrunGrupId = $("#ddlUrunGrupId").val();
        urun.UrunAdi = $("#txtUrunAdi").val();
        urun.ListeFiyat = $("#txtListeFiyat").val();
        urun.ListeIskontoOran = $("#txtListeIskontoOran").val();
        urun.Aciklama = $("#txtAciklama").val();

        var actionName = selectedRowId > 0 ? "UpdateProduct" : "SaveProduct";

        $.ajax({
            type: "POST",
            url: "/Product/" + actionName,
            data: '{urun:' + JSON.stringify(urun) + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                location.reload();
            }
        });
    }

    function modalGrupKaydet() {
        var urunGrup = {};

        urunGrup.UrunGrupId = selectedGroupRowId;
        urunGrup.UrunGrupAdi = $("#txtUrunGrupAdi").val();
        urunGrup.AnaGrupId = $("#ddlAnaUrunGrupId").val();

        var actionName = selectedGroupRowId > 0 ? "UpdateProductGroup" : "SaveProductGroup";

        $.ajax({
            type: "POST",
            url: "/Product/" + actionName,
            data: '{urunGrup:' + JSON.stringify(urunGrup) + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                location.reload();
            }
        });
    }

    // silme
    function modalSil() {
        var urun = {};
        urun.UrunId = selectedRowId;

        $.ajax({
            type: "POST",
            url: "/Product/DeleteProduct",
            data: '{urun:' + JSON.stringify(urun) + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                location.reload();
            }
        });
    }

    function modalGrupSil() {
        var urunGrup = {};
        urunGrup.UrunGrupId = selectedGroupRowId;

        $.ajax({
            type: "POST",
            url: "/Product/DeleteProductGroup",
            data: '{urunGrup:' + JSON.stringify(urunGrup) + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                location.reload();
            }
        });
    }
</script>

