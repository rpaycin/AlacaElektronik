@using Admin.DataLayer;
@model IEnumerable<Kullanicilar>

@{
    ViewBag.Title = "Kullanıcı Bilgileri";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<button type="button" class="btn btn-block btn-info btn-sm" data-toggle="modal" data-target="#modalSave" style="width:100px" onclick="addClick()">Ekle</button> <br />

<table id="tblDataList" class="table table-bordered table-hover dataTable dtr-inline" role="grid" aria-describedby="dataList_info">
    <thead>
        <tr role="row">
            <th>Kullanıcı Adı</th>
            <th>Email</th>
            @*<th>Şifre</th>*@
            <th>Açıklama</th>

            <th style="width:150px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Kullanicilar user in Model)
        {
            <tr role="row" class="odd">
                <td>@user.KullaniciAdi</td>
                <td>@user.Email</td>
                @*<td>@user.Sifre</td>*@
                <td>@user.Aciklama</td>
                <td>
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modalSave" onclick="updateClick(@user.KullaniciId)" title="Güncelle">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-text" viewBox="0 0 16 16">
                            <path d="M5 4a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm-.5 2.5A.5.5 0 0 1 5 6h6a.5.5 0 0 1 0 1H5a.5.5 0 0 1-.5-.5zM5 8a.5.5 0 0 0 0 1h6a.5.5 0 0 0 0-1H5zm0 2a.5.5 0 0 0 0 1h3a.5.5 0 0 0 0-1H5z"></path>
                            <path d="M2 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V2zm10-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1z"></path>
                        </svg>
                    </button>
                    <button type="button" class="btn btn-secondary" data-toggle="modal" data-target="#modalDelete" onclick="deleteClick(@user.KullaniciId)" title="Sil">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"></path>
                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"></path>
                        </svg>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

@*Kullanıcı ekleme&güncelleme*@
<div class="modal fade" id="modalSave" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span id="spanBaslik"></span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div id="divUpdate" class="modal-body">
                <form role="form">
                    <div class="card-body">
                        <div class="form-group">
                            <div class="form-group">
                                <label for="exampleInputPassword1">Kullanıcı Adi</label>
                                <input type="text" class="form-control" id="txtKullaniciAdi" placeholder="Kullanıcı Adı">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Email</label>
                                <input type="email" class="form-control" id="txtEmail" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Şifre</label>
                                <input type="password" class="form-control" id="txtSifre" placeholder="Şifre">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Açıklama</label>
                                <input type="text" class="form-control" id="txtAciklama" placeholder="Açıklama">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal" id="btnModalClose">Kapat</button>
                <button type="button" class="btn btn-primary" onclick="modalKaydet()">Kaydet</button>
            </div>
        </div>
    </div>
</div>

@*Kullanıcı silme*@
<div class="modal fade" id="modalDelete" style="display: none;" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <span>Kullanıcıyı silmek istediğinize emin misiniz?</span>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal">Hayır</button>
                <button type="button" class="btn btn-primary" onclick="modalSil()">Evet</button>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.5/jquery.min.js"></script>
<script>
    $(function () {
        $("#tblDataList").dataTable({
            "responsive": true,
            "autoWidth": true,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.10.13/i18n/Turkish.json",
            }
        });
    });

    var selectedRowId = 0;

    function addClick() {
        $("#spanBaslik").text("Kullanıcı Ekleme");
    }

    function updateClick(id) {
        $("#spanBaslik").text("Kullanıcı Güncelleme");

        selectedRowId = id;

        var model = @Html.Raw(Json.Encode(Model));

        if (id > 0 && model != null && model.length > 0) {
            for (var i = 0; i < model.length; i++) {
                if (model[i].KullaniciId == selectedRowId) {
                    var item = model[i];

                    $("#txtKullaniciAdi").val(item.KullaniciAdi);
                    $("#txtEmail").val(item.Email);
                    $("#txtSifre").val(item.Sifre);
                    $("#txtAciklama").val(item.Aciklama);
                }
            }
        }
    }

    function deleteClick(id) {
        selectedRowId = id;
    }

    // kaydetme
    function modalKaydet() {
        var user = {};

        user.KullaniciId = selectedRowId;
        user.KullaniciAdi = $("#txtKullaniciAdi").val();
        user.Email = $("#txtEmail").val();
        user.Sifre = $("#txtSifre").val();
        user.Aciklama = $("#txtAciklama").val();

        var actionName = selectedRowId > 0 ? "UpdateUser" : "SaveUser";

        $.ajax({
            type: "POST",
            url: "/User/" + actionName,
            data: '{user:' + JSON.stringify(user) + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                location.reload();
            }
        });
    }

    // silme
    function modalSil() {
        var user = {};
        user.KullaniciId = selectedRowId;

        $.ajax({
            type: "POST",
            url: "/User/DeleteUser",
            data: '{user:' + JSON.stringify(user) + '}',
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                location.reload();
            }
        });
    }
</script>

